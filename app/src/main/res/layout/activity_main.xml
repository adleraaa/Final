<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_MainActivity_Cagagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catagory"
        app:layout_constraintBottom_toTopOf="@+id/button_MainActivity_BeginGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MainActivity_Diffculty"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_MainActivity_BeginGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MainActivity_Cagagory"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_MainActivity_Diffculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diffculty"
        app:layout_constraintBottom_toTopOf="@+id/button_MainActivity_Cagagory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MainAcrtivity_Numbers"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView_MainAcrtivity_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Q&amp;A game"
        app:layout_constraintBottom_toTopOf="@+id/button_MainAcrtivity_Numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_MainAcrtivity_Numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#of questions"
        app:layout_constraintBottom_toTopOf="@+id/button_MainActivity_Diffculty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_MainAcrtivity_Welcome"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>