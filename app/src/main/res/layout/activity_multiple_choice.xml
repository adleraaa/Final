<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultipleChoiceActivity">

    <TextView
        android:id="@+id/textView_MultipleChoiceActivity_Question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_MultipleChoiceActivity_Option1"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_MultipleChoiceActivity_Option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Option 1"
        app:layout_constraintTop_toBottomOf="@+id/textView_MultipleChoiceActivity_Question"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_MultipleChoiceActivity_Option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Option 2"
        app:layout_constraintTop_toBottomOf="@+id/button_MultipleChoiceActivity_Option1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_MultipleChoiceActivity_Option3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Option 3"
        app:layout_constraintTop_toBottomOf="@+id/button_MultipleChoiceActivity_Option2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_MultipleChoiceActivity_Option4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Option 4"
        app:layout_constraintTop_toBottomOf="@+id/button_MultipleChoiceActivity_Option3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_MultipleChoiceActivity_Submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/button_MultipleChoiceActivity_Option4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>